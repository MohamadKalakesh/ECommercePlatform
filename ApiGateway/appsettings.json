{
  "ReverseProxy": {
    "Routes": {
      "productRoute": {
        "ClusterId": "productCluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },
      "customerRoute": {
        "ClusterId": "customerCluster",
        "Match": {
          "Path": "/api/customer/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "productCluster": {
        "Destinations": {
          "productAPI": {
            "Address": "http://product-service:8080/"
          }
        }
      },
      "customerCluster": {
        "Destinations": {
          "customerAPI": {
            "Address": "http://customer-service:8080/"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
